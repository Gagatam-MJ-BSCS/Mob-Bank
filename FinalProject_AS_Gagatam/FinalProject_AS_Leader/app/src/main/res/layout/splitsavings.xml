<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/head"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="15dp"
			android:background="#009688"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/btnBack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:src="@drawable/back_white"
				android:scaleType="center"/>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="SPLIT SAVINGS"
				android:textSize="18sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/balanceContainer"
			android:layout_width="match_parent"
			android:layout_height="130dp"
			android:padding="8dp"
			android:background="#00796B"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/balanceText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="â‚± 0,000.00"
				android:textSize="40sp"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/textview7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SPLIT SAVINGS BALANCE"
				android:textSize="16sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/body"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#EEEEEE"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:orientation="horizontal">
				<Button
					android:id="@+id/btnControls"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:padding="8dp"
					android:background="#009688"
					android:text="GENERAL"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"/>
				<Button
					android:id="@+id/btnSettings"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#009688"
					android:text="SETTINGS"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/boxControl"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:padding="15dp"
				android:background="#FFFFFF"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="AMOUNT"
					android:textSize="18sp"
					android:textColor="#000000"/>
				<EditText
					android:id="@+id/tbAmount"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:padding="8dp"
					android:textSize="18sp"
					android:textColor="#000000"
					android:hint="0"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:inputType="numberDecimal"
					android:imeOptions="actionDone"/>
				<Button
					android:id="@+id/btnTransferToBalance"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#009688"
					android:text="TRANSFER TO BALANCE"
					android:textSize="18sp"
					android:textColor="#FFFFFF"/>
				<TextView
					android:id="@+id/textview10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:text="OR"
					android:textSize="12sp"
					android:textColor="#9E9E9E"
					android:layout_gravity="center_horizontal|center_vertical"/>
				<Button
					android:id="@+id/btnCashout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#009688"
					android:text="CASH OUT"
					android:textSize="18sp"
					android:textColor="#FFFFFF"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/boxSplitSavingSettings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:padding="15dp"
				android:background="#FFFFFF"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:text="SPLIT SAVING SETTINGS"
					android:textSize="18sp"
					android:textColor="#000000"/>
				<EditText
					android:id="@+id/tbSplitSavingSettings"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:textSize="18sp"
					android:textColor="#000000"
					android:hint="0"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:inputType="numberSigned"
					android:imeOptions="actionDone"/>
				<Button
					android:id="@+id/btnSave"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#009688"
					android:text="SAVE"
					android:textSize="18sp"
					android:textColor="#FFFFFF"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
